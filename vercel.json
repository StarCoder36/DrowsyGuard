{
  "version": 2,
  "name": "drowsyguard-frontend",
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "frontend/$1" }
  ],
  "env": {
    "REACT_APP_BACKEND_URL": "https://drowsyguard-backend.onrender.com"
  }
}
